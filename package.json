{
  "name": "task-management-node-js",
  "version": "1.0.0",
  "description": "Task management backend",
  "main": "app.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx esbuild.ts",
    "dev:prod": "cross-env NODE_ENV=production npm run dev",
    "start": "cross-env NODE_ENV=production npm run build && fastify start dist/app.js --host 0.0.0.0",
    "start:dev": "cross-env NODE_ENV=development npm run build:dev && fastify start dist/app.js --host 0.0.0.0",
    "build": "rm -rf dist && cross-env NODE_ENV=production tsx esbuild.ts",
    "build:dev": "rm -rf dist && cross-env NODE_ENV=development tsx esbuild.ts",
    "migrate": "npx knex migrate:latest --knexfile ./src/database/knexfile.ts",
    "migrate:prod": "cross-env NODE_ENV=production npx knex migrate:latest --knexfile ./src/database/knexfile.ts",
    "migrate:make": "npx knex --knexfile src/database/knexfile.ts migrate:make -x ts",
    "seed": "npx knex seed:run --knexfile ./src/database/knexfile.ts",
    "seed:prod": "cross-env NODE_ENV=production npx knex seed:run --knexfile ./src/database/knexfile.ts",
    "seed:make": "npx knex seed:make --knexfile ./src/database/knexfile.ts",
    "delete:db": "node ./src/database/deleteDatabase.js"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.3",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/http-proxy": "^9.5.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^1.10.2",
    "bcryptjs": "^2.4.3",
    "esbuild-plugin-pino": "^2.2.1",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "firebase": "^11.0.2",
    "fluent-json-schema": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "node-cron": "^3.0.3",
    "objection": "^3.1.5",
    "pg": "^8.12.0",
    "pino": "^9.5.0",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "tiny-glob": "^0.2.9",
    "@types/async": "^3.2.24",
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.14.2",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "esbuild-plugin-tsc": "^0.4.0",
    "fastify-cli": "^5.9.0",
    "fastify-tsconfig": "^1.0.1",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "knex"
  ],
  "author": "hariharan",
  "license": "ISC"
}
